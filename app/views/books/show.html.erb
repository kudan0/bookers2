<!--エラーメッセージ-->
  <% if @book_new.errors.any? %>
    <div class="error_explanation">
      <h3><%= @book_new.errors.count %>errors prohibited this book from being saved:</h3>
        <% @book_new.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
    </div>
  <% end %>



<div class="container">
  <div class="row">
<!--テンプレ挿入-->
    <%= render 'users/list', user: @user, book: @book_new %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <!--アイコン-->
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback:"no_image.jpg", size: "40x40" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%=link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to 'Edit',edit_book_path, class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>