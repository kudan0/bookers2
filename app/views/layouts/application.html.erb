<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to 'Bookers', "/", class: "navbar-brand" %>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse" id="navbarNavDropdown" style>
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li><%= link_to ' Home', user_path(current_user), class: "fas fa-home nav-link text-light" %></li>  <!--/users/[:id]-->
                <li><%= link_to ' Users', "/users", class: "fas fa-users nav-link text-light" %></li>
                <li><%= link_to ' Books', "/books", class: "fas fa-book-open nav-link text-light" %></li>
                <li><%= link_to ' logout', destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-light" %></li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li><%= link_to ' Home', "/", class: "fas fa-home nav-link text-light" %></li>
                <li><%= link_to ' About', "/home/about", class: "fas fa-link nav-link text-light" %></li>
                <li><%= link_to ' sign up', "/users/sign_up", class: "fas fa-user-plus nav-link text-light" %></li>
                <li><%= link_to ' login', "/users/sign_in", class: "fas fa-sign-in-alt nav-link text-light" %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p id="notice"><%= flash[:notice] %></p><!--フラッシュメッセージ-->
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
