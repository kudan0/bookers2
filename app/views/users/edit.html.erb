<P id="notice"></P>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <!--エラーメッセージ-->
      <% if @user.errors.any? %>
        <div class="error_explanation">
          <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
            <% @user.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
            <% end %>
        </div>
      <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field:name, autofocus: true, id:"user_name", placeholder:"名前", class: "form-control name"%>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field:profile_image, placeholder:"プロフィール画像", class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area:introduction, autofocus: true, id:"user_introduction", class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>