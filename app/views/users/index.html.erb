<!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
    </div>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
<!--テンプレここから-->
    <%= render 'users/list', user: @user, book: @book %>
<!--ここまで-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>