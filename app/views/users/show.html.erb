<!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
    </div>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <!--部分テンプレ-->
    <%= render 'users/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <!--投稿したbookの一覧-->
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <!--プロフ画像はuserへリンク-->
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback:"no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td><%=link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>